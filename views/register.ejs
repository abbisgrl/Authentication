<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3 centerLable">
        <img src="/assets/icon.png" alt="icon" width="20%" />
      </h1>
      <h2 class="centerLable ghostwhite">
        Create New Account
      </h2>
      <form action="/auth/register" method="POST">
        <div class="form-group">
          <label for="name" class="ghostwhite">Full Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control whiteTransparent"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email" class="ghostwhite">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control whiteTransparent"
            placeholder="Enter Email Address"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password" class="ghostwhite">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control whiteTransparent"
            placeholder="Enter Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2" class="ghostwhite">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control whiteTransparent"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button
          type="submit"
          style="background-color:#222e3f;"
          class="btn btn-primary btn-block"
        >
          Register
        </button>
      </form>
      <p class="mt-4 red">
        Already have an account? &nbsp <a href="/auth/login">Login</a>
      </p>
    </div>
  </div>
</div>
