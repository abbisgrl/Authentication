<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-2 centerLable">
        <img src="/assets/icon.png" alt="icon" width="20%" />
      </h1>
      <h2 class="mb-2 centerLable ghostwhite">
        LOGIN
      </h2>
      <form action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email" class="ghostwhite">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control whiteTransparent"
            placeholder="Enter Email Address"
          />
        </div>
        <div class="form-group">
          <label for="password" class="ghostwhite">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control whiteTransparent"
            placeholder="Enter Password"
          />
        </div>
        <button
          type="submit"
          style="background-color:#1877f2;"
          class="btn btn-primary btn-block"
        >
          Login
        </button>
      </form>
      <button
        type="submit"
        class="btn btn-primary btn-block mt-3"
        style="background-color: #42b72a;"
      >
        <a style="color:#FFFFFF; text-decoration: none;" href="/auth/register"
          >Create New Account</a
        >
      </button>
      <p class="mt-3">
        <a href="/auth/forgot">Forgotten password?</a>
      </p>
    </div>
  </div>
</div>

